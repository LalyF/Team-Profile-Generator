//   Function to create Engineer object and add it to the team array
  async function addEngineer() {
    const engineerAnswers = await promptEngineer();
    const engineer = new Engineer(engineerAnswers.name, engineerAnswers.id, engineerAnswers.email, engineerAnswers.github);
    console.log('Adding an Engineer');
    team.push(engineer);
  }
  
//   // Function to create Intern object and add it to the teamMembers array
  async function addIntern() {
    const internAnswers = await promptIntern();
    const intern = new Intern(internAnswers.name, internAnswers.id, internAnswers.email, internAnswers.school);
    team.push(intern);
  }
  
